{
  "name": "climate-event-ohlc-aggregator",
  "version": "1.0.0",
  "description": "Real-time service that connects to a climate WebSocket stream, aggregates data into OHLC format, and serves it via a local API.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
    "simulate": "ts-node src/scripts/weather-simulator.ts",
    "format": "prettier --write .",
    "lint": "eslint src utils"
  },
  "keywords": [
    "weather",
    "ohlc",
    "aggregation",
    "websocket",
    "express",
    "realtime"
  ],
  "author": "01egP",
  "license": "MIT",
  "dependencies": {
    "connect-timeout": "^1.9.0",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/connect-timeout": "^1.9.0",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.14",
    "@types/node-fetch": "^2.6.12",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.17.0"
  }
}
